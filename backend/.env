# Lumina LMS Environment Configuration

# Environment
ENVIRONMENT=development
DEBUG=True

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Database Settings (using SQLite for quick local dev; change to postgres for prod)
DATABASE_URL=sqlite:///./lumina_local_dev.db

# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production-12345678901234567890
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8000", "http://127.0.0.1:3000"]

# Vector Database Settings
VECTOR_DB_TYPE=milvus
MILVUS_HOST=localhost
MILVUS_PORT=19530
WEAVIATE_URL=http://localhost:8080

# Embedding Model Settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# LLM Settings
LLM_TYPE=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
VLLM_MODEL=microsoft/DialoGPT-medium

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=[".pdf", ".txt", ".md", ".docx"]

# Redis Settings
REDIS_URL=redis://localhost:6379

# Face Recognition Settings
FACE_MODEL_PATH=models/insightface
FACE_RECOGNITION_THRESHOLD=0.6

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/lumina_ai.log

# Monitoring
PROMETHEUS_PORT=9090
