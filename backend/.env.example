# Example environment variables for local development (backend)
# Copy this file to backend/.env and edit values as needed

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/lumina

# Redis (used by streak service and caching)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=change-me-in-dev

# Host & port
API_HOST=127.0.0.1
API_PORT=8000

# Optional: local Ollama/vllm endpoints
OLLAMA_BASE_URL=http://localhost:11434

# Other toggles
DEBUG=true
