# Firebase Configuration Template
# Copy this to .env.local and fill in your Firebase project details

# Database (Keep for reference - MongoDB is being replaced with Firebase)
# DATABASE_URL="postgresql://lumina_user:lumina_secure_password_123@localhost:5432/lumina_db?schema=public"

# Authentication
NEXTAUTH_SECRET="change-this-to-a-random-string-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="your-jwt-secret-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Firebase Configuration
# Get these from: https://console.firebase.google.com/
# Project Settings > General > Your apps > Firebase SDK snippet > Config
NEXT_PUBLIC_FIREBASE_API_KEY="your-api-key-here"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project-id.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project-id.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="G-XXXXXXXXXX"

# OpenAI (Multi-Agent System)
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_ORG_ID=""

# Agent Configuration
AGENT_CONCURRENT_LIMIT="5"
AGENT_TIMEOUT_MS="300000"
AGENT_RETRY_ATTEMPTS="3"

# WebSocket (Real-time Updates)
WS_PORT="3001"
WS_PATH="/ws"

# App Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_NAME="Lumina AI Learning"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW_MS="900000"

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/app.log"
